<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/my_scroll_view"
        android:scrollbars = "none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollingCache = "true"
        tools:layout_behaviour = "@string/appbar_scrolling_view_behaviour">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:background="#3F1B7E" />

            <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_profile_icon_24dp"
            android:layout_marginTop="150sp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#888686"
            app:civ_border_width="5dp"
            android:elevation="2dp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25sp"
                app:cardElevation="10sp"
                android:layout_below="@id/profile_image"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="30sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center_horizontal"
                        android:text="User Name"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/crsid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center_horizontal"
                        android:text="crsid"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center_horizontal"
                        android:text="bio"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-light"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/collegeid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25sp"
                            android:text="College:"
                            android:textColor="#3797CF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/user_college"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/collegeid"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="220sp"
                            android:fontFamily="sans-serif-light"
                            android:text="College"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/yearid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25sp"
                            android:text="Year:"
                            android:textColor="#3797CF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/user_year"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/yearid"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="220sp"
                            android:fontFamily="sans-serif-light"
                            android:text="Year"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gradid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25sp"
                            android:text="Graduation Year:"
                            android:textColor="#3797CF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/user_grad"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/gradid"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="220sp"
                            android:fontFamily="sans-serif-light"
                            android:text="2022"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/interestid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25sp"
                            android:text="Interests:"
                            android:textColor="#3797CF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/user_interests1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/interestid"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="220sp"
                            android:fontFamily="sans-serif-light"
                            android:text="Interest 1"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_interests2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_below="@id/user_interests1"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="220sp"
                            android:fontFamily="sans-serif-light"
                            android:text="Interest 2"
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>


