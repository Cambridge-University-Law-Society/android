<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clipToPadding="false"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:minHeight="@dimen/list_item_height">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cards"
        card_view:cardCornerRadius="12dp"
        card_view:cardMaxElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/cards"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/notification_name_friends_holder"
                    >

                    <TextView
                        android:id="@+id/notification_title_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="8dp"
                        android:paddingTop="8dp"
                        android:gravity="bottom"
                        android:textSize="22sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/dark_text"
                        android:fontFamily="sans-serif"
                        tools:text="Fleek Fridays" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/notification_name_friends_holder"
                    android:orientation="horizontal"
                    android:id="@+id/notification_date_loc_holder"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:id="@+id/notification_date_and_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_light"
                        android:fontFamily="sans-serif-light"
                        tools:text="Friday 15th October: 22:00" />


                    <TextView
                        android:id="@+id/notification_type_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:textSize="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="sans-serif-light"
                        tools:text="Event" />

                </LinearLayout>

                <ru.embersoft.expandabletextview.ExpandableTextView
                    android:id="@+id/notification_content_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notification_date_loc_holder"
                    app:etv_animationTime="20"
                    app:etv_expandLines="2"
                    app:etv_showLine="false"
                    app:etv_textContentSize="14sp"
                    app:etv_textExpand="Show more"
                    app:etv_textShrink="Show less"
                    app:etv_textContentColor="#8A000000"
                    app:etv_textStateColor="#8A000000"
                    android:layout_marginBottom="8dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    tools:text="hiehehiehfilaehflahnflkajshddfnlahdlsakdhnlkad"/>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>